<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sht.users.mapper.UGoodsMapper">
	<select id="getGoodsById" parameterType="string" resultType="com.sht.users.po.UGoods">
		
		SELECT * FROM ( SELECT G.*, ROWNUM RN FROM (SELECT * FROM GOODS WHERE OWNER=#{id}) G WHERE ROWNUM &lt;= #{pageEnd}) WHERE RN &gt;= #{pageStar}
	</select>
	
	<select id="searchUGoodsBytitle" parameterType="string" resultType="com.sht.users.po.UGoods">
		
		SELECT * FROM ( SELECT G.*, ROWNUM RN FROM (SELECT * FROM GOODS WHERE title LIKE #{title}) G WHERE ROWNUM &lt;= #{pageEnd}) WHERE RN &gt;= #{pageStar}
	</select>
	
	<select id="getGoodsCountById" parameterType="string" resultType="int">
		
		SELECT count(*) FROM GOODS WHERE OWNER=#{id} 
		
	</select>
	
	<select id="getGoodsDetailById" parameterType="string" resultType="com.sht.users.po.UGoods">
		
		SELECT * FROM GOODS WHERE id=#{id}
	</select>
	
	<delete id="deleteGoodsByid" parameterType="string">
		DELETE FROM GOODS WHERE ID = #{id}
	</delete>
	
	<update id="UpdateUGoodsById" parameterType="com.sht.users.po.UGoods">
		UPDATE GOODS SET TITLE=#{title},DESCRIPTION=#{description},PRICE=#{price},SPRICE=#{sprice},CONDITION=#{condition},REGION=#{region} WHERE ID=#{id}	
	</update>
</mapper>